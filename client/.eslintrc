{
  "extends": ["react-app", "react-app/jest","plugin:prettier/recommended"],
  "plugins": ["react-hooks", "prettier"],
  "rules": {
    // Only essential rules that aren't covered by react-app
    "no-console": "off", // Warn about console statements
    "no-unused-vars": "off", // Turn off base rule (TypeScript handles this)
    "@typescript-eslint/no-unused-vars": "warn", // Show warnings for unused variables
    "prefer-const": "off", // Use const when possible
    "no-duplicate-imports": "off", // Prevent duplicate imports
    "quotes": ["warn", "double"], // Enforce double quotes
    "jsx-quotes": ["warn", "prefer-double"], // Enforce double quotes in JSX
    "comma-dangle": ["warn", "always-multiline"], // Allow trailing commas in multiline
    "prettier/prettier": ["off", {
      "trailingComma": "all",
      "tabWidth": 2,
      "semi": true
    }]
  }
}
