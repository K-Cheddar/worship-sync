{
  "name": "portable-media-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "client": "cd client && npm start ",
    "server": "npx nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\""
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@types/pouchdb": "^6.4.2",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase": "^8.3.2",
    "html2plaintext": "^2.1.2",
    "imap": "^0.8.19",
    "jade": "^1.11.0",
    "mailparser": "^3.5.0",
    "pouchdb": "^9.0.0",
    "querystring": "^0.2.0",
    "react-scripts": "^2.1.8",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "concurrently": "^4.1.2"
  },
  "type": "module"
}
