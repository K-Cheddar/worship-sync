{
  "name": "worship-sync",
  "private": true,
  "version": "1.12.0",
  "scripts": {
    "start": "node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "client": "cd client && npm start ",
    "server": "npx nodemon server.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:electron": "concurrently --kill-others-on-fail \"npm run server\" \"npm run electron\"",
    "build:client": "npm --prefix client run build",
    "electron": "cross-env NODE_ENV=production WS_DESKTOP=1 electron .",
    "preelectron": "npm run build:client",
    "electron:dev": "cross-env NODE_ENV=production WS_DESKTOP=1 electron .",
    "electron:pack": "npm run build:client && electron-builder --dir",
    "electron:dist": "npm run build:client && electron-builder",
    "prepare": "husky",
    "release": "semantic-release && node scripts/updateClientVersion.js"
  },
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "@sentry/node": "^10.5.0",
    "@types/pouchdb": "^6.4.2",
    "axios": "^1.9.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.17.1",
    "firebase": "^8.3.2",
    "hls.js": "^1.6.9",
    "html2plaintext": "^2.1.2",
    "imap": "^0.8.19",
    "jade": "^1.11.0",
    "mailparser": "^3.5.0",
    "pouchdb": "^9.0.0",
    "querystring": "^0.2.0",
    "react-qr-code": "^2.0.15",
    "react-scripts": "^2.1.8",
    "request": "^2.88.2",
    "xlsx": "^0.18.5",
    "wait-on": "^7.2.0",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/obs-studio": "^2.17.2",
    "concurrently": "^4.1.2",
    "husky": "^9.1.7",
    "semantic-release": "^24.2.5",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "cross-env": "^7.0.3"
  },
  "type": "module",
  "main": "electron/main.js",
  "build": {
    "appId": "net.worshipsync.app",
    "productName": "WorshipSync",
    "publish": [
      {
        "provider": "github",
        "owner": "KPC",
        "repo": "worship-sync"
      }
    ],
    "files": [
      "electron/**/*",
      "client/build/**/*",
      "server.js",
      "bibles/**/*",
      "getScheduleFunctions.js",
      "CHANGELOG.md",
      "package.json"
    ],
    "directories": {
      "buildResources": "electron/build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "electron/build/logo512.png"
    }
  }
}
